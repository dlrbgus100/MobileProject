<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@drawable/backgound"
    tools:context="kr.ac.kumoh.ce.s20100884.database.Join">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="44dp">
    <EditText
        android:id="@+id/joinID"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:hint="ID"
        android:textColor="#0a0a0a"
        android:textColorHint="#b5b5b5"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="중복확인"
        android:id="@+id/idcheckBtn"
        android:background="#8ad5ea" />
</LinearLayout>

    <EditText
        android:id="@+id/joinPass"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#0a0a0a"
        android:textColorHint="#b5b5b5" />

    <EditText
        android:id="@+id/joinName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:hint="이름"
        android:textColor="#0a0a0a"
        android:textColorHint="#b5b5b5" />
    <EditText
        android:id="@+id/joinSex"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:hint="성별"
        android:textColor="#0a0a0a"
        android:textColorHint="#b5b5b5" />
    <EditText
        android:id="@+id/joinAge"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:hint="나이"
        android:textColor="#0a0a0a"
        android:textColorHint="#b5b5b5" />

    <EditText
        android:id="@+id/joinEmail"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:hint="E-mail"
        android:textColor="#0a0a0a"
        android:textColorHint="#b5b5b5" />
    <EditText
        android:id="@+id/joinNumber"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:hint="Phone Number( - 제외)"
        android:textColor="#0a0a0a"
        android:textColorHint="#b5b5b5" />
    <EditText
        android:id="@+id/joinLocate"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:hint="사는 곳"
        android:textColor="#0a0a0a"
        android:textColorHint="#b5b5b5"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가입 완료"
        android:id="@+id/joinBtn"
        android:layout_gravity="center_horizontal"
        android:background="#8ad5ea" />

</LinearLayout>
